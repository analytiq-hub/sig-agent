# Secret Configuration for doc-router
# 
# IMPORTANT: This is a template file. Create your actual secret.yaml using:
#   kubectl create secret generic doc-router-secret \
#     --from-literal=NEXTAUTH_SECRET='your-secret-here' \
#     --from-literal=ADMIN_PASSWORD='your-password' \
#     --from-literal=OPENAI_API_KEY='your-key' \
#     --namespace=doc-router \
#     --dry-run=client -o yaml > secret.yaml
#
# Or use kubectl apply with this file after replacing the base64 encoded values:
#   echo -n 'your-secret' | base64

apiVersion: v1
kind: Secret
metadata:
  name: doc-router-secret
  namespace: doc-router
type: Opaque
data:
  # Base64 encoded values
  # Generate with: echo -n 'your-value' | base64
  NEXTAUTH_SECRET: <base64-encoded-nextauth-secret>
  ADMIN_EMAIL: <base64-encoded-admin-email>
  ADMIN_PASSWORD: <base64-encoded-admin-password>
  
  # Optional: OAuth providers
  AUTH_GITHUB_ID: <base64-encoded-github-id>
  AUTH_GITHUB_SECRET: <base64-encoded-github-secret>
  AUTH_GOOGLE_ID: <base64-encoded-google-id>
  AUTH_GOOGLE_SECRET: <base64-encoded-google-secret>
  
  # Optional: AWS credentials
  AWS_ACCESS_KEY_ID: <base64-encoded-aws-key>
  AWS_SECRET_ACCESS_KEY: <base64-encoded-aws-secret>
  AWS_S3_BUCKET_NAME: <base64-encoded-bucket-name>
  
  # Optional: LLM API keys (at least one required)
  OPENAI_API_KEY: <base64-encoded-openai-key>
  ANTHROPIC_API_KEY: <base64-encoded-anthropic-key>
  GEMINI_API_KEY: <base64-encoded-gemini-key>
  GROQ_API_KEY: <base64-encoded-groq-key>
  MISTRAL_API_KEY: <base64-encoded-mistral-key>
  
  # Optional: Email and Payments
  SES_FROM_EMAIL: <base64-encoded-email>
  STRIPE_SECRET_KEY: <base64-encoded-stripe-key>
  STRIPE_WEBHOOK_SECRET: <base64-encoded-stripe-webhook>
  STRIPE_PRODUCT_TAG: <base64-encoded-stripe-tag>

